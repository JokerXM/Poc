@model IEnumerable<PoCPoC.Models.Events>

@{
    ViewBag.Title = "Loginresult_admin";
}

<h2>Loginresult_user</h2>

<p>
    As User
    <ul>
        @Html.ActionLink("management your own account", "Edit", "User", new { id = Session["ID"] }, new { target = "_blank" })
        @Html.ActionLink("management your own events", "IndexforUser", "Event")
        @Html.ActionLink("management your friends", "Index", "Friend")
    </ul>
    As Admin
    <ul>
        @Html.ActionLink("management all the account", "Index", "User")
        @Html.ActionLink("management all the events", "Index", "Event")
    </ul>

</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeID)
            </td>
            <td>
                @Html.ActionLink("Open it", "Open", "Event", new { id = item.E_ID }, new { target = "_blank" }) |
                @Html.ActionLink("Close it", "Close", "Event", new { id = item.E_ID }, new { target = "_blank" }) |
                @Html.ActionLink("Lock it", "Lock", "Event", new { id = item.E_ID }, new { target = "_blank" }) |
                @Html.ActionLink("UnLock it", "UnLock", "Event", new { id = item.E_ID }, new { target = "_blank" })
            </td>
        </tr>
    }

</table>
