@model PoCPoC.Models.Contribution

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Contribution</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Quanlity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Quanlity)
            @Html.ValidationMessageFor(model => model.Quanlity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TypeID, "contributiontype")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.TypeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.E_ID, "E")
        </div>
        <div class="editor-field">
            @Html.DropDownList("E_ID", String.Empty)
            @Html.ValidationMessageFor(model => model.E_ID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
